        "format-alt": "{capacity}%",
        "format-plugged": "{Û∞ÇÑ}",
        "tooltip-format": "<tt>Û∞Åπ {capacity}%\nÔÉß {power}W\nÔÄó {time}</tt>",
        "format-icons": [
            "Û∞Çé",
            "Û∞Å∫",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ],
        "tooltip": true
    },
    "network": {
        "format-wifi": "{icon} ",
        "format-ethernet": "Û∞àÄ",
        "format-icons": [
            "Û∞§Ø",
            "Û∞§ü",
            "Û∞§¢",
            "Û∞§®"
        ],
        "format-disconnected": "Û∞™é",
        "on-click": "uwsm-app -- kitty -e nmtui",
        "interval": 2,
        "tooltip": true,
        "tooltip-format": "<tt>{ifname} via {gwaddr} \nSSID: {essid}   Signal: {signalStrength}%\nDown: {bandwidthDownBytes}/s   Up: {bandwidthUpBytes}/s\nIP: {ipaddr} </tt>"
    },

    "bluetooth": {
        "markup": true,
        "format": "{icon}",
        "format-disabled": "",
        "format-connected": "Û∞Ç±",
        "format-alt-connected": "Û∞Ç±",
        "format-connected-battery": "Û∞ãã",
        "on-click-right": "blueman-manager",
        "format-icons": [
            "Ôäî",
            "Û∞§æ",
            "Û∞•Ä",
            "Û∞•Ñ",
            "Û∞•à"
        ],
        "tooltip-format": "Û∞ÇØ {controller_alias}\t{controller_address}\n\n{num_connections} connected",
    },
    "custom/wlsunset": {
        "interval": "once",
        "exec": "if systemctl --user is-active --quiet wlsunset.service; then stdbuf -oL printf '{\"alt\": \"on\"}'; else stdbuf -oL printf '{\"alt\": \"off\"}'; fi",
        "on-click": "systemctl --user is-active --quiet wlsunset.service && systemctl --user stop wlsunset.service || systemctl --user start wlsunset.service",
        "signal": 1,
        "return-type": "json",
        "format": "{icon}",
        "tooltip-format": "wlsunset: {alt}",
        "format-icons": {
            "off": " Óåç ",
            "on": " ÔìÆ "
        }
    },
    "custom/mako": {
        "exec": "makoctl mode | grep -q dnd && echo '{\"alt\":\"activated\",\"class\":[\"activated\"]}' || echo '{\"alt\":\"deactivated\",\"class\":[\"deactivated\"]}'",
        "on-click": "[ \"$(makoctl mode)\" = \"dnd\" ] && makoctl mode -r dnd || makoctl mode -s dnd; pkill -RTMIN+2 waybar",
        "interval": "once",
        "signal": 2,
        "return-type": "json",
        "format": "{icon}",
        "format-icons": {
            "activated": "Ôá∑ ",
            "deactivated": ""
        },
        "tooltip": true,
        "tooltip-format": "Toggle DND on/off"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-alt": " {icon}\n{percent}",
        "format-icons": [
            "Óéé",
            "Óéè",
            "Óéê",
            "Óéë",
            "Óéí",
            "Óéì",
            "Óèú",
            "Óèù",
            "Óèû",
            "Óè†",
            "Óè†",
            "Óè°",
            "Óè¢",
            "Óéõ"
        ],
        "tooltip": false,
        "on-click-right": "~/.config/waybar/scripts/sunset-toggle.sh"
    },
    "wireplumber": {
        "format": "{icon}",
        "format-alt": " {icon}\n{volume}",
        "format-icons": [
            "Ôí™",
            "Û∞™û",
            "Û∞™ü",
            "Û∞™†",
            "Û∞™°",
            "Û∞™¢",
            "Û∞™£",
            "Û∞™§",
            "Û∞™•"
        ],
        "format-muted": "Ó™Ω",
        "max-volume": 99,
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-click-middle": "blueman-manager"
    },
    "tray": {
        // "icon-size": 22,
        "spacing": 8
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 14,
        "transition-duration": 200,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 14
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 14
            }
        ],
        "ignore-monitor": true,
        "ignore": [
            {
                "type": "audio-in",
                "name": "cava"
            }
        ]
    },
    "group/group-power": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false,
        },
        "modules": [
            "custom/power", // First element is the "group leader" and won't ever be hidden
            "custom/quit",
            "custom/lock",
            "custom/reboot",
        ]
    },
    "custom/quit": {
        "format": "Û∞óº",
        "tooltip": false,
        "on-click": "niri msg quit"
    },
    "custom/lock": {
        "format": "Û∞çÅ",
        "tooltip": false,
        "on-click": "pidof hyprlock || hyprlock"
    },
    "custom/reboot": {
        "format": "Û∞úâ",
        "tooltip": false,
        "on-click": "systemctl reboot"
    },
    "custom/power": {
        "format": "ÔÄë",
        "tooltip": false,
        "on-click": "systemctl sleep"
    },
    "custom/recorder": {
        "format": "{icon} ",
        "format-icons": [
            "ÔÄΩ",
        ],
        "return-type": "json",
        "interval": 5,
        "exec": "echo '{\"class\": \"recording\"}'",
        "exec-if": "pgrep wf-recorder",
        "tooltip": false,
        "on-click": "killall -s SIGINT wf-recorder",
    }
}