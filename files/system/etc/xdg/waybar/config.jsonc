        "on-scroll-up": "playerctl previous",
        "on-scroll-down": "playerctl next",
        "tooltip": false
    },
    "battery": {
        "states": {
            "almost-full": 95,
            "good": 80,
            "warning": 40,
            "critical": 20
        },
