{
    "layer": "top",
    "position": "left",
    // "width": 42,
    "margin-left": 0,
    "margin-right": 0,
    "margin-top": 0,
    "margin-bottom": 0,
    "spacing": 0,
    "gtk-layer-shell": true,
    "modules-left": [
        "niri/workspaces",
        "mpris"
    ],
    "modules-center": [
        "niri/window"
    ],
    "modules-right": [
        //"wireplumber",
        "custom/recorder",
        "privacy",
        "tray",
        "custom/mako",
        "clock",
        "group/main",
        "group/group-power"
    ],
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé ",
            "power-saver": "ÔÅ¨"
        }
    },
    "clock": {
        "format": "{:%H\n%M}",
        "tooltip": true,
        "tooltip-format": "{calendar}",
        "on-click": "[ \"$(makoctl mode)\" = \"dnd\" ] && makoctl mode -r dnd || makoctl mode -s dnd ; pkill -RTMIN+2 waybar",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "format": {
                "months": "<span color='#e0af68'><b>{}</b></span>",
                "days": "<span color='#bb9af7'><b>{}</b></span>",
                "weeks": "<span color='#9ece6a'><b>W{}</b></span>",
                "weekdays": "<span color='#7aa2f7'><b>{}</b></span>",
                "today": "<span color='#f7768e'><b><u>{}</u></b></span>"
            }
        }
    },
    "image#logo": {
        "path": "/home/vorxiu/dotfiles/waybar/.config/waybar/niri.svg",
        "size": 24,
        "interval": 5,
        "on-click": "mpc toggle"
    },
    "group/main": {
        "orientation": "vertical",
        "modules": [
            "network",
            "bluetooth",
            "group/battery",
        ]
    },
    "group/battery": {
        "orientation": "vertical",
        "drawer": {
            "transition-duration": 400,
            "transition-left-to-right": false,
        },
        "modules": [
            "battery",
            "custom/wlsunset",
            "idle_inhibitor",
            "power-profiles-daemon"
        ]
    },
    "idle_inhibitor": {
        "markup": true,
        "format": "{icon}",
        "tooltip": false,
        "format-icons": {
            "activated": "Û∞Ö∂",
            "deactivated": "Û∞õä"
        }
    },
    "niri/window": {
        "format": "{title}",
        "rotate": 90,
        "max-length": 30,
        "min-length": 10,
        "rewrite": {
            "(.*) - Mozilla Firefox": "üåé $1",
            "(.*) - zsh": "> [$1]"
        }
    },
    "niri/workspaces": {
        "format": " {icon} ",
        "format-icons": {
            "active": "Û∞ÆØ",
